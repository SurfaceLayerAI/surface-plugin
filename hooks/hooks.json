{
  "description": "Surface plugin hooks for session indexing",
  "hooks": {
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/index_session.py"
          }
        ]
      }
    ]
  }
}
